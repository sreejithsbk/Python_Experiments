-- CREATING AN ADVANCED CALCULATOR

num1 = float(input("Enter the first number : "))
op = input("Enter the Operator : ")
num2 = float(input("Enter the second number : "))

if op == "+":
    print(num1 + num2)
elif op == "-":
    print(num1 - num2)
elif op == "/":
    print(num1 / num2)
elif op == "*":
    print(num1 * num2)
else:
    print("Invalid Operator")
