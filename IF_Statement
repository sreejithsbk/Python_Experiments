-- if the condition is true then the first statement is executed, if the condition is False the second statement is executed.

is_male = True

if is_male:
   print("You are identified to be Male")
else:
   print("You are not identified to be a Male")

--OR statement when one of either condition is true.

is_male = True
is_tall = True

if is_male or is_tall:
   print("You are identified to be Male or Tall or may be both")
else:
   print("You are not identified to be a Male nor tall")

--AND condition, where both the conditions must be true to have the first conditon to be true.

is_male = True
is_tall = True

if is_male and is_tall:
   print("You are identified to be Male and tall at the same time")
else:
   print("You are not identified to be a Male nor to be all")

-- NOT CONDITION --not(is_tall) this indicates that the person who is NOT TALL

is_male = True
is_tall = False

if is_male and is_tall:
   print("You are identified to be Male and tall at the same time")
elif is_male and not(is_tall):
    print("You are identified as a male who is not tall")
else:
   print("You are not identified to be a Male nor to be all")

---ANOTHER EXAMPLE BELOW -- where in not(is_male) condition

is_male = False
is_tall = True

if is_male and is_tall:
   print("You are identified to be Male and tall at the same time")
elif is_male and not(is_tall):
    print("You are identified as a male who is not tall")
elif not(is_male) and is_tall:
    print("You are not a male but are tall")
else:
   print("You are not identified to be a Male nor to be all")

-- IF STATEMENT AND COMPARISON OPERATOR

def max_num(num1, num2, num3):
   if num1 >= num2 and num1 >= num3:
       return num1
   elif num2 >= num1 and num2 >= num3:
       return num2
   else:
       return num3

print(max_num(33, 24, 60))

-- MY CODE BELOW WHICH IS EXPERIMENTAL for the same conditon above
def max_num(num1, num2, num3):
    x = float(num1)
    y = float(num2)
    z = float(num3)
    if num1 > num2 and num1 > num3:
        print("Num1 is the maximum number " + str(x))
    elif num2 > num1 and num2 > num3:
        print("Num2 is the maximum number " + str(y))
    else:
        print("Num3 is the maximum number " + str(z))

max_num(33, 24, 12)

